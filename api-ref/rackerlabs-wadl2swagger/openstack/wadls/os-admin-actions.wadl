         <method name="POST" rax:id="pause">
            <wadl:doc xmlns="http://docbook.org/ns/docbook"
                      xml:lang="EN"
                      title="Pause server">
               <para role="shortdesc">Pauses a server. Changes its status
                to PAUSED.</para>
               <para>This operation stores the state of the VM in RAM. A
                paused instance continues to run in a frozen
                state.</para>
            </wadl:doc>
            <request>
               <representation mediaType="application/json">
                  <wadl:doc xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN"
                            title="Pause server: JSON request">
                    <xsdxt:code xmlns:db="http://docbook.org/ns/docbook">
                        <programlisting language="javascript">{
    "pause": null
}</programlisting>
                     </xsdxt:code>
                  </wadl:doc>
               </representation>
               <representation mediaType="application/xml">
                  <wadl:doc xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN"
                            title="Pause server: XML request">
                    <xsdxt:code xmlns:db="http://docbook.org/ns/docbook">
                        <programlisting language="xml">&lt;?xml version="1.0" encoding="UTF-8"?&gt;
    &lt;pause/&gt;</programlisting>
                     </xsdxt:code>
                  </wadl:doc>
                  <param name="pause" style="plain" type="xsd:string" required="true">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                               xml:lang="EN"
                               title="Pause action">
                        <para>Specify the <code>pause</code> action in
                            the request body.</para>
                    </wadl:doc>
                  </param>
               </representation>
            </request>
            <response status="202"/>
         </method>
