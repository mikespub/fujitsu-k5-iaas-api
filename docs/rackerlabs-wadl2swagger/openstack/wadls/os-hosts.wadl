         <method name="PUT" rax:id="updateHost">
            <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN" title="Update host">
               <para role="shortdesc">Enables a host or puts it in
                maintenance mode.</para>
            </wadl:doc>
            <request>

               <representation mediaType="application/json">
                  <wadl:doc xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN"
                            title="Update host: JSON request">
                    <xsdxt:code xmlns:db="http://docbook.org/ns/docbook">
                        <programlisting language="javascript">{
    "status": "enable",
    "maintenance_mode": "disable"
}</programlisting>
                     </xsdxt:code>
                  </wadl:doc>
               </representation>
               <representation mediaType="application/xml">
                  <wadl:doc xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN"
                            title="Update host: XML request">
                    <xsdxt:code xmlns:db="http://docbook.org/ns/docbook">
                        <programlisting language="xml">&lt;?xml version="1.0" encoding="UTF-8" ?&gt;
&lt;updates&gt;
    &lt;status&gt;enable&lt;/status&gt;
    &lt;maintenance_mode&gt;disable&lt;/maintenance_mode&gt;
&lt;/updates&gt;</programlisting>
                     </xsdxt:code>
                  </wadl:doc>
                  <param name="status" style="plain" required="true" type="xsd:string">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN" title="Status">
                        <para>Valid values are enable or
                            disable.</para>
                    </wadl:doc>
                  </param>
                  <param name="maintenance_mode"
                         style="plain"
                         required="true"
                         type="xsd:string">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                               xml:lang="EN"
                               title="Maintenance mode">
                        <para>Valid values are enable or
                            disable.</para>
                    </wadl:doc>
                  </param>
               </representation>
            </request>
            <response status="200">
               <representation mediaType="application/json">
                  <wadl:doc xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN"
                            title="Update host: JSON response">
                    <xsdxt:code xmlns:db="http://docbook.org/ns/docbook">
                        <programlisting language="javascript">{
    "host": "0738dca90a8c43fdadd0be28715520e2",
    "maintenance_mode": "off_maintenance",
    "status": "enabled"
}</programlisting>
                     </xsdxt:code>
                  </wadl:doc>
               </representation>
               <representation mediaType="application/xml">
                  <wadl:doc xmlns="http://docbook.org/ns/docbook"
